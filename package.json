{
  "name": "graphQL-learn",
  "version": "0.1.0",
  "description": "graphQL learn",
  "main": "index.js",
  "scripts": {
    "start": "parcel serve ./client/index.html --no-cache",
    "server": "nodemon",
    "client:build": "parcel build ./client/index.html -d dist/client",
    "server:build": "",
    "codegen": "yarn codegen:server",
    "codegen:server": "graphql-codegen --config codegen-server.yml",
    "codegen:client": "graphql-codegen --config codegen-client.yml"
  },
  "keywords": [],
  "author": "lawler61",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{css,less}": [
      "prettier --write",
      "git add"
    ]
  },
  "alias": {
    "client": "./client",
    "server": "./server",
    "common": "./common",
    "~/app": "client/app",
    "~/components": "client/components",
    "~/graphql": "client/graphql",
    "~/models": "server/models"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "apollo-boost": "^0.4.7",
    "apollo-server-express": "^2.9.14",
    "body-parser": "^1.19.0",
    "bulma": "^0.8.0",
    "classnames": "^2.2.6",
    "express": "^4.17.1",
    "graphql": "^14.5.8",
    "graphql-tag": "^2.10.1",
    "mobx": "^5.15.1",
    "mobx-react": "^6.1.4",
    "mongoose": "^5.8.3",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "redis": "^2.8.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.10.0",
    "@graphql-codegen/typescript": "^1.10.0",
    "@types/classnames": "^2.2.9",
    "@types/mongoose": "^5.5.35",
    "@types/node": "^13.1.0",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/redis": "^2.8.14",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.8.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "husky": "^3.1.0",
    "less": "^3.10.3",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.19.1",
    "ts-node": "^8.5.4",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  }
}
